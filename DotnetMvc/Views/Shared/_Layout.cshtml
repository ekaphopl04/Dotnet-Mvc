<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Comic Book Manager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DotnetMvc.styles.css" asp-append-version="true" />
    <style>
        .navbar-brand {
            font-weight: bold;
            color: #007bff !important;
        }
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .card-hover:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }
        .btn-custom {
            border-radius: 25px;
            padding: 0.5rem 1.5rem;
        }
        .stats-card {
            background: linear-gradient(45deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border: none;
        }
        .feature-icon {
            font-size: 2rem;
            color: #007bff;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book me-2"></i>
                    Comic Book Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="comicBooksDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-collection me-1"></i>Comic Books
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="comicBooksDropdown">
                                <li><a class="dropdown-item" asp-controller="ComicBooks" asp-action="Index">
                                    <i class="bi bi-list me-2"></i>All Comics
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ComicBooks" asp-action="Create">
                                    <i class="bi bi-plus-circle me-2"></i>Add New Comic
                                </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="ComicBooks" asp-action="GroupedByCategory">
                                    <i class="bi bi-collection me-2"></i>View by Category
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="ComicBooks" asp-action="Statistics">
                                    <i class="bi bi-graph-up me-2"></i>Statistics
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Privacy
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-light btn-sm" asp-controller="ComicBooks" asp-action="Create">
                            <i class="bi bi-plus-circle me-1"></i>Quick Add
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-book me-2"></i>Comic Book Manager</h5>
                    <p class="mb-0">Your comprehensive solution for managing comic book collections with advanced features.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="mb-2">
                        <strong>Features:</strong>
                        <span class="badge bg-primary ms-1">CRUD Operations</span>
                        <span class="badge bg-success ms-1">Advanced Filtering</span>
                        <span class="badge bg-info ms-1">Statistics</span>
                    </p>
                    <p class="mb-0">&copy; 2025 - Comic Book Manager - <a href="#" class="text-light">Privacy Policy</a></p>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
