@{
    ViewData["Title"] = "Search Comic Books";
}

<div class="container">
    <h1>Search Comic Books</h1>
    <hr />
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Search Filters</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SearchResults" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Search Term</label>
                                    <input name="searchTerm" class="form-control" placeholder="Title, author, artist, or description" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Category</label>
                                    <select name="categoryId" class="form-control" asp-items="ViewBag.Categories">
                                        <option value="">-- All Categories --</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Min Price ($)</label>
                                    <input name="minPrice" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label">Max Price ($)</label>
                                    <input name="maxPrice" type="number" step="0.01" min="0" class="form-control" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group text-center mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
