@model IEnumerable<DotnetMvc.Models.ComicBook>

@{
    ViewData["Title"] = "Comic Books";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Comic Books</h1>
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
            <a asp-action="GroupedByCategory" class="btn btn-info">
                <i class="bi bi-collection"></i> View by Category
            </a>
            <a asp-action="Statistics" class="btn btn-warning">
                <i class="bi bi-graph-up"></i> Statistics
            </a>
        </div>
    </div>
    
    <!-- Advanced Search and Filter Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Search & Filter Options
                <button class="btn btn-sm btn-outline-secondary float-end" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                    Toggle Filters
                </button>
            </h5>
        </div>
        <div class="collapse show" id="filterCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Search Text</label>
                                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Title, author, artist, or description..." />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Category</label>
                                <select name="categoryId" class="form-control" asp-items="ViewBag.Categories">
                                    <option value="">All Categories</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-3">
                                <label>Availability</label>
                                <select name="isAvailable" class="form-control">
                                    <option value="">All Items</option>
                                    <option value="true" @(ViewData["CurrentAvailability"]?.ToString() == "True" ? "selected" : "")>Available Only</option>
                                    <option value="false" @(ViewData["CurrentAvailability"]?.ToString() == "False" ? "selected" : "")>Unavailable Only</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label>Min Price</label>
                                <input type="number" name="minPrice" value="@ViewData["CurrentMinPrice"]" class="form-control" step="0.01" min="0" placeholder="0.00" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label>Max Price</label>
                                <input type="number" name="maxPrice" value="@ViewData["CurrentMaxPrice"]" class="form-control" step="0.01" min="0" placeholder="999.99" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label>Sort By</label>
                                <select name="sortOrder" class="form-control">
                                    <option value="" @(ViewData["CurrentSort"]?.ToString() == "" ? "selected" : "")>Title (A-Z)</option>
                                    <option value="title_desc" @(ViewData["CurrentSort"]?.ToString() == "title_desc" ? "selected" : "")>Title (Z-A)</option>
                                    <option value="Author" @(ViewData["CurrentSort"]?.ToString() == "Author" ? "selected" : "")>Author (A-Z)</option>
                                    <option value="author_desc" @(ViewData["CurrentSort"]?.ToString() == "author_desc" ? "selected" : "")>Author (Z-A)</option>
                                    <option value="Price" @(ViewData["CurrentSort"]?.ToString() == "Price" ? "selected" : "")>Price (Low-High)</option>
                                    <option value="price_desc" @(ViewData["CurrentSort"]?.ToString() == "price_desc" ? "selected" : "")>Price (High-Low)</option>
                                    <option value="Date" @(ViewData["CurrentSort"]?.ToString() == "Date" ? "selected" : "")>Date Added (Old-New)</option>
                                    <option value="date_desc" @(ViewData["CurrentSort"]?.ToString() == "date_desc" ? "selected" : "")>Date Added (New-Old)</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group mb-3">
                                <label>&nbsp;</label>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i> Apply Filters
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-clockwise"></i> Clear All Filters
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Results Summary -->
    <div class="row mb-3">
        <div class="col-md-6">
            <p class="text-muted">
                Showing @Model.Count() of @ViewData["TotalItems"] comic books
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
                {
                    <span>for "@ViewData["CurrentFilter"]"</span>
                }
            </p>
        </div>
        <div class="col-md-6 text-end">
            <small class="text-muted">Page @ViewData["CurrentPage"] of @ViewData["TotalPages"]</small>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4><i class="bi bi-info-circle"></i> No comic books found</h4>
            <p>Try adjusting your search criteria or add new comic books.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Your First Comic Book
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>
                            <a asp-action="Index" 
                               asp-route-sortOrder="@ViewData["TitleSortParm"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                               class="text-white text-decoration-none">
                                Title 
                                @if (ViewData["CurrentSort"]?.ToString() == "")
                                {
                                    <i class="bi bi-arrow-up"></i>
                                }
                                else if (ViewData["CurrentSort"]?.ToString() == "title_desc")
                                {
                                    <i class="bi bi-arrow-down"></i>
                                }
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" 
                               asp-route-sortOrder="@ViewData["AuthorSortParm"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                               class="text-white text-decoration-none">
                                Author
                                @if (ViewData["CurrentSort"]?.ToString() == "Author")
                                {
                                    <i class="bi bi-arrow-up"></i>
                                }
                                else if (ViewData["CurrentSort"]?.ToString() == "author_desc")
                                {
                                    <i class="bi bi-arrow-down"></i>
                                }
                            </a>
                        </th>
                        <th>Artist</th>
                        <th>
                            <a asp-action="Index" 
                               asp-route-sortOrder="@ViewData["PriceSortParm"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                               class="text-white text-decoration-none">
                                Price
                                @if (ViewData["CurrentSort"]?.ToString() == "Price")
                                {
                                    <i class="bi bi-arrow-up"></i>
                                }
                                else if (ViewData["CurrentSort"]?.ToString() == "price_desc")
                                {
                                    <i class="bi bi-arrow-down"></i>
                                }
                            </a>
                        </th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Title</strong>
                                @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                {
                                    <br><small class="text-muted">@(item.Description.Substring(0, 50))...</small>
                                }
                            </td>
                            <td>@item.Author</td>
                            <td>@item.Artist</td>
                            <td>
                                <span class="fw-bold text-success">@item.Price.ToString("C")</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Category?.Name</span>
                            </td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Unavailable</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        @if ((int)ViewData["TotalPages"] > 1)
        {
            <nav aria-label="Comic books pagination">
                <ul class="pagination justify-content-center">
                    @if ((int)ViewData["CurrentPage"] > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index"
                               asp-route-page="@((int)ViewData["CurrentPage"] - 1)"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                Previous
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, (int)ViewData["CurrentPage"] - 2); i <= Math.Min((int)ViewData["TotalPages"], (int)ViewData["CurrentPage"] + 2); i++)
                    {
                        <li class="page-item @((int)ViewData["CurrentPage"] == i ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index"
                               asp-route-page="@i"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                @i
                            </a>
                        </li>
                    }
                    
                    @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index"
                               asp-route-page="@((int)ViewData["CurrentPage"] + 1)"
                               asp-route-sortOrder="@ViewData["CurrentSort"]"
                               asp-route-searchString="@ViewData["CurrentFilter"]"
                               asp-route-categoryId="@ViewData["CurrentCategory"]"
                               asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                               asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                               asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                Next
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>
