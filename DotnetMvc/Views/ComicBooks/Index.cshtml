@model IEnumerable<DotnetMvc.Models.ComicBook>

@{
    ViewData["Title"] = "Comic Books";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Comic Books</h1>
        <div class="btn-group">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
            <a asp-action="GroupedByCategory" class="btn btn-info">
                <i class="bi bi-collection"></i> View by Category
            </a>
            </div>
            <div class="col-md-4 text-end">
                <a asp-action="Create" class="btn btn-light btn-lg btn-custom shadow">
                    <i class="bi bi-plus-circle me-2"></i>Add New Comic
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stats-card text-center">
            <div class="card-body">
                <i class="bi bi-collection feature-icon text-white"></i>
                <h4 class="mt-2">@ViewData["TotalItems"]</h4>
                <p class="mb-0">Total Comics</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white text-center">
            <div class="card-body">
                <i class="bi bi-funnel feature-icon text-white"></i>
                <h4 class="mt-2">Advanced</h4>
                <p class="mb-0">Filtering</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center">
            <div class="card-body">
                <i class="bi bi-sort-down feature-icon text-white"></i>
                <h4 class="mt-2">Smart</h4>
                <p class="mb-0">Sorting</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center">
            <div class="card-body">
                <i class="bi bi-graph-up feature-icon text-white"></i>
                <h4 class="mt-2">@ViewData["TotalPages"]</h4>
                <p class="mb-0">Pages</p>
            </div>
        </div>
    </div>
</div>

<!-- Advanced Filtering and Sorting Form -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-gradient" style="background: linear-gradient(45deg, #007bff, #6610f2);">
        <h5 class="mb-0 text-white">
            <i class="bi bi-funnel me-2"></i>Advanced Filters & Sorting
            <button class="btn btn-sm btn-outline-light float-end" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse" aria-expanded="true">
                <i class="bi bi-chevron-down"></i>
            </button>
        </h5>
    </div>
    <div class="collapse show" id="filterCollapse">
        <div class="card-body bg-light">
            <form method="get">
                <div class="row g-3">
                    <!-- Search -->
                    <div class="col-md-4">
                        <label for="searchString" class="form-label fw-bold">
                            <i class="bi bi-search me-1"></i>Search
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-search"></i></span>
                            <input type="text" class="form-control" id="searchString" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Search by title, author, artist..." />
                        </div>
                    </div>
                    <!-- Category Filter -->
                    <div class="col-md-3">
                        <label for="categoryId" class="form-label fw-bold">
                            <i class="bi bi-collection me-1"></i>Category
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-collection"></i></span>
                            <select class="form-select" id="categoryId" name="categoryId">
                                <option value="">All Categories</option>
                                @foreach (var category in ViewData["Categories"] as SelectList)
                                {
                                    @if (category.Value == ViewData["CurrentCategory"]?.ToString())
                                    {
                                        <option value="@category.Value" selected>
                                            @category.Text
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@category.Value">
                                            @category.Text
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <!-- Min Price -->
                    <div class="col-md-2">
                        <label for="minPrice" class="form-label fw-bold">
                            <i class="bi bi-currency-dollar me-1"></i>Min Price
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input type="number" class="form-control" id="minPrice" name="minPrice" value="@ViewData["CurrentMinPrice"]" step="0.01" min="0" placeholder="0.00" />
                        </div>
                    </div>
                    <!-- Max Price -->
                    <div class="col-md-2">
                        <label for="maxPrice" class="form-label fw-bold">
                            <i class="bi bi-currency-dollar me-1"></i>Max Price
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input type="number" class="form-control" id="maxPrice" name="maxPrice" value="@ViewData["CurrentMaxPrice"]" step="0.01" min="0" placeholder="999.99" />
                        </div>
                    </div>
                    <!-- Sort Order -->
                    <div class="col-md-3">
                        <label for="sortOrder" class="form-label fw-bold">
                            <i class="bi bi-sort-down me-1"></i>Sort By
                        </label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-sort-down"></i></span>
                            <select class="form-select" id="sortOrder" name="sortOrder">
                                @{
                                    var currentSort = ViewData["CurrentSort"]?.ToString();
                                }
                                @if (string.IsNullOrEmpty(currentSort))
                                {
                                    <option value="" selected>üìö Title (A-Z)</option>
                                }
                                else
                                {
                                    <option value="">üìö Title (A-Z)</option>
                                }
                                
                                @if (currentSort == "title_desc")
                                {
                                    <option value="title_desc" selected>üìö Title (Z-A)</option>
                                }
                                else
                                {
                                    <option value="title_desc">üìö Title (Z-A)</option>
                                }
                                
                                @if (currentSort == "Author")
                                {
                                    <option value="Author" selected>‚úçÔ∏è Author (A-Z)</option>
                                }
                                else
                                {
                                    <option value="Author">‚úçÔ∏è Author (A-Z)</option>
                                }
                                
                                @if (currentSort == "author_desc")
                                {
                                    <option value="author_desc" selected>‚úçÔ∏è Author (Z-A)</option>
                                }
                                else
                                {
                                    <option value="author_desc">‚úçÔ∏è Author (Z-A)</option>
                                }
                                
                                @if (currentSort == "Price")
                                {
                                    <option value="Price" selected>üí∞ Price (Low-High)</option>
                                }
                                else
                                {
                                    <option value="Price">üí∞ Price (Low-High)</option>
                                }
                                
                                @if (currentSort == "price_desc")
                                {
                                    <option value="price_desc" selected>üí∞ Price (High-Low)</option>
                                }
                                else
                                {
                                    <option value="price_desc">üí∞ Price (High-Low)</option>
                                }
                                
                                @if (currentSort == "Date")
                                {
                                    <option value="Date" selected>üìÖ Date (Old-New)</option>
                                }
                                else
                                {
                                    <option value="Date">üìÖ Date (Old-New)</option>
                                }
                                
                                @if (currentSort == "date_desc")
                                {
                                    <option value="date_desc" selected>üìÖ Date (New-Old)</option>
                                }
                                else
                                {
                                    <option value="date_desc">üìÖ Date (New-Old)</option>
                                }
                            </select>
                        </div>
                    </div>
                    <!-- Action Buttons -->
                    <div class="col-md-2">
                        <label class="form-label">&nbsp;</label>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-custom">
                                <i class="bi bi-funnel me-1"></i>Apply
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-clockwise me-1"></i>Reset
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Results Summary -->
<div class="row mb-3">
    <div class="col-md-6">
        <p class="text-muted">
            Showing @Model.Count() of @ViewData["TotalItems"] comic books
            @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
            {
                <span>for "@ViewData["CurrentFilter"]"</span>
            }
        </p>
    </div>
    <div class="col-md-6 text-end">
        <small class="text-muted">Page @ViewData["CurrentPage"] of @ViewData["TotalPages"]</small>
    </div>
</div>

<!-- Comic Book List -->
@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4><i class="bi bi-info-circle"></i> No comic books found</h4>
        <p>Try adjusting your search criteria or add new comic books.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Your First Comic Book
        </a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["TitleSortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-categoryId="@ViewData["CurrentCategory"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                           class="text-white text-decoration-none">
                            Title 
                            @if (ViewData["CurrentSort"]?.ToString() == "")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["CurrentSort"]?.ToString() == "title_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["AuthorSortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-categoryId="@ViewData["CurrentCategory"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                           class="text-white text-decoration-none">
                            Author
                            @if (ViewData["CurrentSort"]?.ToString() == "Author")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["CurrentSort"]?.ToString() == "author_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>Artist</th>
                    <th>
                        <a asp-action="Index" 
                           asp-route-sortOrder="@ViewData["PriceSortParm"]"
                           asp-route-searchString="@ViewData["CurrentFilter"]"
                           asp-route-categoryId="@ViewData["CurrentCategory"]"
                           asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                           asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                           asp-route-isAvailable="@ViewData["CurrentAvailability"]"
                           class="text-white text-decoration-none">
                            Price
                            @if (ViewData["CurrentSort"]?.ToString() == "Price")
                            {
                                <i class="bi bi-arrow-up"></i>
                            }
                            else if (ViewData["CurrentSort"]?.ToString() == "price_desc")
                            {
                                <i class="bi bi-arrow-down"></i>
                            }
                        </a>
                    </th>
                    <th>Category</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="align-middle">
                        <td>
                            <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                                {
                                    <img src="@item.CoverImageUrl" alt="@item.Title" class="me-3 rounded" style="width: 50px; height: 70px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="me-3 bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 70px;">
                                        <i class="bi bi-book text-white"></i>
                                    </div>
                                }
                                <div>
                                    <strong>@item.Title</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br><small class="text-muted">@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</small>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="fw-bold">@item.Author</span>
                        </td>
                        <td>
                            <span class="text-muted">@item.Artist</span>
                        </td>
                        <td>
                            <span class="badge bg-success fs-6">$@item.Price.ToString("F2")</span>
                        </td>
                        <td>
                            @if (item.Category != null)
                            {
                                <span class="badge bg-primary">@item.Category.Name</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No Category</span>
                            }
                        </td>
                        <td>
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Unavailable</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Enhanced Pagination -->
    @if ((int)ViewData["TotalPages"] > 1)
    {
        <nav aria-label="Comic books pagination" class="mt-4">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="mb-0 text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Showing page @ViewData["CurrentPage"] of @ViewData["TotalPages"] 
                        (@ViewData["TotalItems"] total items)
                    </p>
                </div>
                <div class="col-md-6">
                    <ul class="pagination justify-content-end mb-0">
                        @if ((int)ViewData["CurrentPage"] > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index"
                                   asp-route-page="1"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]"
                                   asp-route-categoryId="@ViewData["CurrentCategory"]"
                                   asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                                   asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                                   asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                    <i class="bi bi-chevron-double-left"></i> First
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index"
                                   asp-route-page="@((int)ViewData["CurrentPage"] - 1)"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]"
                                   asp-route-categoryId="@ViewData["CurrentCategory"]"
                                   asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                                   asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                                   asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                    <i class="bi bi-chevron-left"></i> Previous
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, (int)ViewData["CurrentPage"] - 2); i <= Math.Min((int)ViewData["TotalPages"], (int)ViewData["CurrentPage"] + 2); i++)
                        {
                            <li class="page-item @(i == (int)ViewData["CurrentPage"] ? "active" : "")">
                                <a class="page-link" 
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]"
                                   asp-route-categoryId="@ViewData["CurrentCategory"]"
                                   asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                                   asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                                   asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                    @i
                                </a>
                            </li>
                        }

                        @if ((int)ViewData["CurrentPage"] < (int)ViewData["TotalPages"])
                        {
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index"
                                   asp-route-page="@((int)ViewData["CurrentPage"] + 1)"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]"
                                   asp-route-categoryId="@ViewData["CurrentCategory"]"
                                   asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                                   asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                                   asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                    Next <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" 
                                   asp-action="Index"
                                   asp-route-page="@ViewData["TotalPages"]"
                                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                                   asp-route-searchString="@ViewData["CurrentFilter"]"
                                   asp-route-categoryId="@ViewData["CurrentCategory"]"
                                   asp-route-minPrice="@ViewData["CurrentMinPrice"]"
                                   asp-route-maxPrice="@ViewData["CurrentMaxPrice"]"
                                   asp-route-isAvailable="@ViewData["CurrentAvailability"]">
                                    Last <i class="bi bi-chevron-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    }
}

<!-- Quick Action Buttons -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <div class="btn-group" role="group">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add New Comic
            </a>
            <a asp-action="GroupedByCategory" class="btn btn-info btn-lg">
                <i class="bi bi-collection me-2"></i>View by Category
            </a>
            <a asp-action="Statistics" class="btn btn-warning btn-lg">
                <i class="bi bi-graph-up me-2"></i>Statistics
            </a>
        </div>
    </div>
</div>
